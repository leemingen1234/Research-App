package com.example.android.researchapplication;

import android.app.Activity;
import android.os.Bundle;
import android.content.Intent;
import android.view.View;
import android.widget.TextView;

import androidx.appcompat.app.AppCompatActivity;


public class MainActivity extends AppCompatActivity {


    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        // Find the View that shows the numbers category
        TextView science = (TextView) findViewById(R.id.science);

// Set a click listener on that View
        science.setOnClickListener(new View.OnClickListener() {
            // The code in this method will be executed when the science View is clicked on.
            @Override
            public void onClick(View view) {
                Intent scienceIntent = new Intent(MainActivity.this, ScienceActivity.class);
                startActivity(scienceIntent);
            }
        });

        // Find the View that shows the numbers category
        TextView engineering = (TextView) findViewById(R.id.engineering);

// Set a click listener on that View
        engineering.setOnClickListener(new View.OnClickListener() {
            // The code in this method will be executed when the science View is clicked on.
            @Override
            public void onClick(View view) {
                Intent engineeringIntent = new Intent(MainActivity.this, EngineeringActivity.class);
                startActivity(engineeringIntent);
            }
        });

        // Find the View that shows the numbers category
        TextView past = (TextView) findViewById(R.id.past);

// Set a click listener on that View
        past.setOnClickListener(new View.OnClickListener() {
            // The code in this method will be executed when the science View is clicked on.
            @Override
            public void onClick(View view) {
                Intent pastIntent = new Intent(MainActivity.this, PastActivity.class);
                startActivity(pastIntent);
            }
        });
    }
}
